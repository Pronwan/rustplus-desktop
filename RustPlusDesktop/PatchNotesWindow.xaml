<Window x:Class="RustPlusDesk.Views.PatchNotesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:RustPlusDesk.Views"
        Title="Rust+ Desk – Patch Notes 3.3.1 – 16/02/26"
        Width="720"
        Height="620"
        Background="{DynamicResource AppBg}"
        Foreground="{DynamicResource TextPrimary}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        AllowsTransparency="False">


    <Border Background="{DynamicResource Surface}"
            BorderBrush="{DynamicResource CardBorder}"
            BorderThickness="1"
            CornerRadius="{DynamicResource Radius}"
            Padding="14"
            Margin="8">
        <DockPanel LastChildFill="True">
            <StackPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                <TextBlock Text="Patch Notes February 2026 | Stability &amp; Event Refinement"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Margin="0,0,0,2"/>
                <TextBlock Text="Version 3.3.1"
                           Foreground="{DynamicResource Accent}"
                           FontSize="11"
                           Margin="0,0,0,4"/>
                <TextBlock Text="16.02.2026"
                           Foreground="{DynamicResource TextSubtle}"
                           FontSize="13"/>
            </StackPanel>

            <ScrollViewer VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Disabled"
              CanContentScroll="False"
              ScrollViewer.PanningMode="VerticalOnly">
                <StackPanel Margin="0,0,0,12" Orientation="Vertical" >
                    <Border Background="{DynamicResource SurfaceAlt}"
                            BorderBrush="{DynamicResource CardBorder}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="10"
                            Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="v3.3.1  |  Stability, Deduplication &amp; Event Notifications"
                                       FontWeight="SemiBold"
                                       FontSize="15"
                                       Margin="0,0,0,8"/>

                            <TextBlock Text="• Connection &amp; Announcement Stability" 
                                       FontWeight="Bold" Margin="0,0,0,4"/>
                            <TextBlock Text="Fixed an issue where silent reconnects would cause duplicate chat announcements for monuments and events. The app now preserves its announcement state during short connection drops."
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,8"/>

                            <TextBlock Text="• Deep Sea Event Awareness" 
                                       FontWeight="Bold" Margin="0,0,0,4"/>
                            <TextBlock Text="The app now detects when a Deep Sea event starts and sends a team chat notification including the direction (e.g., North, East, etc.) so your team knows exactly where to look."
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,8"/>

                            <TextBlock Text="• Advanced Chat Deduplication" 
                                       FontWeight="Bold" Margin="0,0,0,4"/>
                            <TextBlock Text="No more duplicate lines when clicking the Chat button! We've implemented a robust 100-message window check that ignores timestamps to filter out duplicates even when identity is slightly shifted."
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,8"/>

                            <TextBlock Text="• Shop Icon Caching (Bandwidth Savings)" 
                                       FontWeight="Bold" Margin="0,0,0,4"/>
                            <TextBlock Text="To save bandwidth and improve loading times, item icons are now cached locally once downloaded. Subsequent views will load instantly from your disk."
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,8"/>

                            <TextBlock Text="• Multi-Server Chat Persistence" 
                                       FontWeight="Bold" Margin="0,0,0,4"/>
                            <TextBlock Text="Chat history is now strictly separated per server (Host:Port). Switching servers will swap your chat logs and UI state, ensuring no crossover between different server contexts."
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,4"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource SurfaceAlt}"
                            BorderBrush="{DynamicResource CardBorder}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="10"
                            Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="v3.3.0  |  Oilrig Timer &amp; Auto-Promote (!leader)"
                                       FontWeight="SemiBold"
                                       FontSize="15"
                                       Margin="0,0,0,8"/>

                            <TextBlock Text="• New Oilrig Countdown &amp; Notifications" 
                                       FontWeight="Bold" Margin="0,0,0,4"/>
                            <Image Source="pack://application:,,,/Screenshots/3.3.0_1.png"
                                   Stretch="Uniform"
                                   MaxHeight="400"
                                   Margin="0,0,0,4"/>
                            <TextBlock Text="When Oilrig is triggered, a crate icon with the remaining time is displayed directly on the map. Additionally, an optional Team Chat notification can remind your team every 5 minutes until the crate is unlocked."
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,12"/>

                            <TextBlock Text="• Leader Auto-Promote System" 
                                       FontWeight="Bold" Margin="0,0,0,4"/>
                            <Image Source="pack://application:,,,/Screenshots/3.3.0_2.png"
                                   Stretch="Uniform"
                                   MaxHeight="400"
                                   Margin="0,0,0,4"/>
                            <TextBlock Text="No more AFK leaders! If the current leader has the desktop app open, any team member can type '!leader' in the in-game chat to be instantly promoted to team leader."
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="Note: Before going AFK/offline, simply pass the lead back to the Rust+ User so your teammates can use this feature."
                                       Foreground="{DynamicResource TextSubtle}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,6"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource SurfaceAlt}"
                            BorderBrush="{DynamicResource CardBorder}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="10"
                            Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="v3.2.0  |  Smart Device Import + Export to Cloud"
                                       FontWeight="SemiBold"
                                       FontSize="15"
                                       Margin="0,0,0,6"/>
                            <Image Source="pack://application:,,,/Screenshots/3.2.0.png"
                                   Stretch="Uniform"
                                   MaxHeight="400"
                                   Margin="0,0,0,4"/>
                            <TextBlock Text="• You can now export your paired Smart Devices for your Team to import. No more running around with wireing tool to find all Smart Switches. "
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="Note: Smart Alerts can only be received within the App. For actual mobile Smart Alarm Alerts, you need to pair the Smart Alarm in-game! "
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,6"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource SurfaceAlt}"
                            BorderBrush="{DynamicResource CardBorder}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="10"
                            Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="v3.1.2  |  Storage Monitor + Chat Notification Optimization"
                                       FontWeight="SemiBold"
                                       FontSize="15"
                                       Margin="0,0,0,6"/>

                            <TextBlock Text="• Storage Monitors now update live and give traffic light indicators for low upkeep on TC."
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,6"/>

                            <TextBlock Text="• Chat will not be spammed with event spawns anymore due to short API interruptions."
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="• You can now zoom in/out the map with NUM +/- (for all of you with broken mouse wheels ;-)"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,6"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource SurfaceAlt}"
                            BorderBrush="{DynamicResource CardBorder}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="10"
                            Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="v3.1.0  |  Storage Monitors and Smart Switch Optimization"
                                       FontWeight="SemiBold"
                                       FontSize="15"
                                       Margin="0,0,0,6"/>

                            <TextBlock Text="• Storage Monitoring + Upkeep Timer now work for Tool Cupboards and Boxes"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,6"/>

                            <TextBlock Text="• Smart Device Polling / Synchronization and UX has been optimized"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,4"
                                       FontWeight="SemiBold"/>
                            <Image Source="pack://application:,,,/Screenshots/3.1.0.png"
                                   Stretch="Uniform"
                                   MaxHeight="400"
                                   Margin="0,0,0,4"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource SurfaceAlt}"
                            BorderBrush="{DynamicResource CardBorder}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="10"
                            Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="v3.0.1  |  Player Location Fix + Mini Map Customization"
                                       FontWeight="SemiBold"
                                       FontSize="15"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="31.10.2025"
                                       Foreground="{DynamicResource TextSubtle}"
                                       FontSize="13"/>

                            <TextBlock Text="• Players and events outside the grid are now displayed at their correct positions on the map."
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,6"/>

                            <TextBlock Text="• The Mini Map now offers enhanced customization options:"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,4"
                                       FontWeight="SemiBold"/>

                            <StackPanel Margin="10,0,0,0">
                                <TextBlock Text="◦ Hold Left Mouse Button – move the Mini Map window"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,2"/>
                                <TextBlock Text="◦ Mouse Wheel – zoom in and out"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,2"/>
                                <TextBlock Text="◦ Shift + Mouse Wheel – adjust Mini Map size"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,2"/>
                                <TextBlock Text="◦ Hold Right Mouse Button – change Mini Map center point"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,2"/>
                                <TextBlock Text="◦ Double Right Click – reset Mini Map to default position and zoom"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource SurfaceAlt}"
                            BorderBrush="{DynamicResource CardBorder}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="10"
                            Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Patch Notes v3.0.0"
                                       FontWeight="SemiBold"
                                       FontSize="15"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="1. Custom Map-Overlays for Teams"
                                       FontWeight="SemiBold"
                                       FontSize="15"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="You can now draw your own map overlays, upload them to the cloud and let your teammates download and display them as well. There are icons for bases, SAM sites and turrets, plus text tool, pen and eraser."
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,8"/>
                            <Image Source="pack://application:,,,/Screenshots/3.0_1.png"
                                   Stretch="Uniform"
                                   MaxHeight="400"
                                   Margin="0,0,0,4"/>
                            <TextBlock Text="(Screenshot: custom overlay drawing view)"
                                       Foreground="{DynamicResource TextSubtle}"
                                       FontSize="11"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource SurfaceAlt}"
                            BorderBrush="{DynamicResource CardBorder}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="10"
                            Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="2. Shop analytics reworked"
                                       FontWeight="SemiBold"
                                       FontSize="15"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="The entire shop view has been cleaned up and extended. You now get better filters, clearer grouping and more powerful tools for trade routing."
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="2.1 Trade and Shop Alarms"
                                       FontWeight="Bold"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="Set audio and/or in-game chat notifications whenever new shops appear that sell or buy what you want. You can also flag suspicious shops (online &lt; 1 minute). Notifications can be saved and are valid across servers."
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,6"/>
                            <Image Source="pack://application:,,,/Screenshots/3.0_2.png"
                                   Stretch="Uniform"
                                   MaxHeight="200"
                                   Margin="0,0,0,10"/>

                            <TextBlock Text="2.2 Profit Trades"
                                       FontWeight="Bold"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="Click the Profit Trades button to list all trades that leave you with more of the starting resource than you had before. Example: start with 3,000 sulfur → buy 500 scrap in Shop A → sell in Shop B for 4,000 sulfur → +1,000 sulfur."
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,6"/>
                            <Image Source="pack://application:,,,/Screenshots/3.0_3.png"
                                   Stretch="Uniform"
                                   MaxHeight="400"
                                   Margin="0,0,0,10"/>

                            <TextBlock Text="2.3 Buy X for Y analytics"
                                       FontWeight="Bold"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="Find trade routes to buy what you actually need with the currency you currently have – even if there is no direct shop for it. The analysis goes up to 4 steps, shows drone costs, minimum unit, max unit and lets you center the 3 shops on the map via the small Go button."
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,6"/>
                            <Image Source="pack://application:,,,/Screenshots/3.0_4.png"
                                   Stretch="Uniform"
                                   MaxHeight="400"
                                   Margin="0,0,0,10"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource SurfaceAlt}"
                            BorderBrush="{DynamicResource CardBorder}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="10"
                            Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="3. Event Spawns in Chat now off by default"
                                       FontWeight="SemiBold"
                                       FontSize="15"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="Some servers don't like chat messages being sent while you're not actually ingame. So cargo / chinook / player-login messages are now disabled by default and have to be turned on manually in the map view. Shop alerts, however, stay enabled by default."
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{DynamicResource SurfaceAlt}"
                            BorderBrush="{DynamicResource CardBorder}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="10"
                            Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Older patch notes / existing features"
                                       FontWeight="SemiBold"
                                       FontSize="15"
                                       Margin="0,0,0,6"/>
                            <Image Source="pack://application:,,,/Screenshots/3.0_5.png"
                                   Stretch="Uniform"
                                   MaxHeight="400"
                                   Margin="0,4,0,8"/>
                            <TextBlock Text="• Full map with monuments, events, players (dot or icons), grid on/off" TextWrapping="Wrap"/>
                            <TextBlock Text="• Smart devices: pair, control, hotkeys (same hotkey for multiple devices)" TextWrapping="Wrap"/>
                            <TextBlock Text="• Camera list and monitoring" TextWrapping="Wrap"/>
                            <TextBlock Text="• Team management (offline / death states, leader promotion, Steam profiles)" TextWrapping="Wrap"/>
                            <TextBlock Text="• Death markers for you and teammates" TextWrapping="Wrap"/>
                            <TextBlock Text="• Mini map overlay to zoom current view, centered on player" TextWrapping="Wrap"/>
                            <Image Source="pack://application:,,,/Screenshots/3.0_6.png"
                                   Stretch="Uniform"
                                   MaxHeight="150"
                                   Margin="0,4,0,8"/>
                            <TextBlock Text="• Crosshair overlay with multiple styles" TextWrapping="Wrap"/>
                            <TextBlock Text="• Donation button (PayPal)" TextWrapping="Wrap"/>
                            <TextBlock Text="• Companion pairing via Chrome / Edge (right click for options)" TextWrapping="Wrap"/>
                            <TextBlock Text="• Update check button" TextWrapping="Wrap"/>
                            <TextBlock Text="• Server time, queue, player count" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Border>
</Window>