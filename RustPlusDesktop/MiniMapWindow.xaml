<Window x:Class="RustPlusDesk.MiniMapWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        Width="260" Height="260">
    <Grid>
        <!-- Runde Mini-Map -->
        <Ellipse x:Name="Circle" Width="260" Height="260">
            <Ellipse.Fill>
                <VisualBrush x:Name="MirrorBrush"
                             Stretch="UniformToFill"
                             AlignmentX="Center" AlignmentY="Center" />
            </Ellipse.Fill>
        </Ellipse>

        <!-- hauchdünner Rand / Shadow optional -->
        <Border CornerRadius="130"
                BorderBrush="#66000000" BorderThickness="1"
                SnapsToDevicePixels="True" />
    </Grid>
</Window>